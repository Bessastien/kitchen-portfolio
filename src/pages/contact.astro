---
import Layout from "../layouts/Layout.astro";
import { Mail, Phone, MapPin } from "lucide-react";
---

<Layout title="Contact - Chef Pâtissier">
    <section class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-serif text-stone-900 mb-4">
                Contactez-moi
            </h1>
            <p class="text-lg text-stone-600">
                Pour toute commande spéciale ou question.
            </p>
        </div>

        <div
            class="grid md:grid-cols-2 gap-12 bg-white p-8 md:p-12 rounded-2xl shadow-sm border border-stone-100"
        >
            <!-- Contact Info -->
            <div class="space-y-8">
                <div>
                    <h3 class="font-serif text-2xl text-stone-900 mb-6">
                        Informations
                    </h3>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-amber-50 rounded-full text-amber-700"
                            >
                                <Mail className="w-6 h-6" />
                            </div>
                            <div>
                                <h4 class="font-medium text-stone-900">
                                    Email
                                </h4>
                                <a
                                    href="mailto:flodab86@gmail.com"
                                    class="text-stone-600 hover:text-amber-700 transition"
                                    >flodab86@gmail.com</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-amber-50 rounded-full text-amber-700"
                            >
                                <Phone className="w-6 h-6" />
                            </div>
                            <div>
                                <h4 class="font-medium text-stone-900">
                                    Téléphone
                                </h4>
                                <a
                                    href="tel:+33652230227"
                                    class="text-stone-600 hover:text-amber-700 transition"
                                    >+33 6 52 23 02 27</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-amber-50 rounded-full text-amber-700"
                            >
                                <MapPin className="w-6 h-6" />
                            </div>
                            <div>
                                <h4 class="font-medium text-stone-900">Lieu</h4>
                                <p class="text-stone-600">Poitiers, France</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div>
                <form
                    name="contact"
                    method="POST"
                    data-netlify="true"
                    netlify-honeypot="bot-field"
                    action="/success"
                    class="space-y-6"
                >
                    <input type="hidden" name="form-name" value="contact" />
                    <p class="hidden">
                        <label
                            >Don't fill this out: <input
                                name="bot-field"
                            /></label
                        >
                    </p>
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-stone-700 mb-1"
                            >Nom</label
                        >
                        <input
                            type="text"
                            name="name"
                            id="name"
                            required
                            class="w-full rounded-md border-stone-200 shadow-sm focus:border-amber-500 focus:ring-amber-500 py-2 px-3 border"
                        />
                    </div>
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-stone-700 mb-1"
                            >Email</label
                        >
                        <input
                            type="email"
                            name="email"
                            id="email"
                            required
                            class="w-full rounded-md border-stone-200 shadow-sm focus:border-amber-500 focus:ring-amber-500 py-2 px-3 border"
                        />
                    </div>
                    <div>
                        <label
                            for="message"
                            class="block text-sm font-medium text-stone-700 mb-1"
                            >Message</label
                        >
                        <textarea
                            name="message"
                            id="message"
                            rows="4"
                            required
                            class="w-full rounded-md border-stone-200 shadow-sm focus:border-amber-500 focus:ring-amber-500 py-2 px-3 border"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-stone-900 text-white font-medium py-3 px-4 rounded-md hover:bg-amber-700 transition duration-300 shadow-lg"
                    >
                        Envoyer
                    </button>
                </form>
            </div>
        </div>
    </section>
</Layout>
