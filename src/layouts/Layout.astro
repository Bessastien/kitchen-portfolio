---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Principal -->
    <title>{title} | Florent DABERT - Pâtissier à Poitiers</title>
    <meta
      name="description"
      content="Florent Dabert, pâtissier professionnel à Poitiers. Découvrez mes créations artisanales, entremets, desserts maison. Disponible pour stages et restauration."
    />
    <meta
      name="keywords"
      content="Florent Dabert, pâtissier, pâtisserie, Poitiers, Vienne, 86, stage pâtisserie, restauration, desserts maison, entremets, gâteaux artisanaux, desserts professionnels, pâtisserie française, créations sucrées, chef pâtissier"
    />
    <meta name="author" content="Florent Dabert" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://florentdabert.bessastien.fr" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://florentdabert.bessastien.fr" />
    <meta property="og:title" content="Florent DABERT - Pâtissier Professionnel à Poitiers" />
    <meta property="og:description" content="Découvrez les créations de Florent Dabert, pâtissier passionné à Poitiers. Entremets, desserts maison, stages et restauration." />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Florent Dabert Pâtisserie" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://florentdabert.bessastien.fr" />
    <meta name="twitter:title" content="Florent DABERT - Pâtissier Professionnel à Poitiers" />
    <meta name="twitter:description" content="Découvrez les créations de Florent Dabert, pâtissier passionné à Poitiers. Entremets, desserts maison, stages et restauration." />
    
    <!-- Géolocalisation -->
    <meta name="geo.region" content="FR-86" />
    <meta name="geo.placename" content="Poitiers" />
    <meta name="geo.position" content="46.580224;0.340375" />
    <meta name="ICBM" content="46.580224, 0.340375" />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Florent Dabert",
        "jobTitle": "Pâtissier",
        "description": "Pâtissier professionnel spécialisé dans les créations artisanales, entremets et desserts maison",
        "url": "https://florentdabert.bessastien.fr",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Poitiers",
          "addressRegion": "Nouvelle-Aquitaine",
          "postalCode": "86000",
          "addressCountry": "FR"
        },
        "knowsAbout": [
          "Pâtisserie",
          "Entremets",
          "Desserts maison",
          "Restauration",
          "Stage pâtisserie"
        ],
        "sameAs": []
      }
    </script>

    <!-- Fonts: Playfair Display (Serif) & Inter (Sans) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <!-- Netlify Identity Widget -->
    <script
      is:inline
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="bg-stone-50 text-stone-800 font-sans min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
    <Footer />

    <script is:inline>
      // On attend que le script soit bien chargé
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>

<style is:global>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Playfair Display", serif;
  }
</style>
